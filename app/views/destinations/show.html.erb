<% if notice != nil %>  
  <p id="notice" class="alert alert-success alert-dismissable" role="alert">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <%= notice %>
  </p>
<% end %>

<%= image_tag @destination.avatar.url(:thumb) %>

<h1><%= "#{@destination.city}, #{@destination.country}" %></h1>

<h2>Population (in millions) <%= @destination.population %></h2>

<p><%= @destination.latitude %>, <%= @destination.longitude %></p>

<p><%= @destination.description %></p>

<div id="d-map"></div>

<%= javascript_tag do %>
   latitude = '<%= j @destination.latitude.to_s %>';
   longitude = '<%= j @destination.longitude.to_s %>';
   address = '<%= j @destination.address %>';
   description = '<%= j @destination.description %>';
<% end %>

<div class="actions form-group">
	<%= link_to 'Edit', edit_destination_path(@destination), class: "btn btn-warning" %>
	<%= link_to 'Back', destinations_path, class: "btn btn-info" %>
</div>
